<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  <h1>New User</h1>
    <%= form_for(:user, url: signup_path) do |f|%>
    <%= f.text_field :name, placeholder: "Your name" %><br><br>
    <%= f.email_field :email, placeholder: "Email" %><br><br>
    <%= f.password_field :password, placeholder: "Password" %><br><br>
    <%= f.submit "Sign up" %><br>
  <%end%>
  
<p>Or log in with <%= link_to('Facebook!', '/auth/facebook')%></p>
