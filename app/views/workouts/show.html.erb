<h1 id="js-workoutName"><%=@workout.name.upcase%></h1>
<a href="#" class="js-next" data-id="<%= @workout.id %>">Next Workout >></a>

<h2>Exercises</h2>
<button class="js-exercises" data-workout="<%= @workout.id %>">Show All</button>
<div id="js-exercisesTable"></div><br>

<!-- link that when clicked - > remove hidden field of form. -->
<button type="button" id="showForm">Add Exercise</button>

  <%= form_for(@exercise, url: workout_exercises_path(@workout), html: {class: "add_exercise"}, data: {workout: "#{@workout.id}"}) do |f| %>
    <%=f.text_field :name, placeholder: "Name your exercise" %>
    <%=f.number_field :length, placeholder: "How many seconds?" %>
    <%=f.number_field :level, placeholder: "How hard? (1-3)" %>
    <%=f.select :category, options_for_select([['upper body'], ['core'], ['lower body'], ['full body']])%><br><br>
    <%=f.text_area :how, placeholder: "Instructions" %><br>
    <%=f.number_field :reps, placeholder: "How many reps?" %><br><br>
    <p><%= f.submit %></p>
  <%end%>
