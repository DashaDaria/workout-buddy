<h1><%=@workout.id%> <%=@workout.name.upcase%> | <%=@workout.intensity%> | <%=@workout.duration%> sec</h1>
<h2>Exercises</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Difficulty</th>
    <th>Length</th>
    <th>Reps</th>
    <th>Instruction</th>
  </tr>
  <tr>
    <%@exercises.each do |e|%>
      <td><%=link_to e.name, exercise_path(e)%></td>
      <td><%=link_to e.category.name, category_path(e.category)%></td>
      <td><%=e.difficulty%></td>
      <td><%=e.length%></td>
      <td><%=e.reps_for(@workout.id)%></td>
      <td><%=truncate e.how%> <button class="js-more" data-id="<%= e.id %>">More</button></td>
  </tr>
      <%end%>
</table><br>

<%=link_to "Edit", edit_workout_path%> | <%=link_to "Delete", workout_path, method: :delete %>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-more").on('click', function() {
    var id = $(this).data("id");
    $.get("/exercises/" + id + "/body", function(data) {
      alert(data);
    });
  });
});
</script>
